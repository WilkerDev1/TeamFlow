<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <!-- Bootstrap para diseño rápido -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f4f5f7; font-family: 'Segoe UI', sans-serif; }
        .navbar { background-color: #0052cc; }
        
        /* Estilos de las columnas Kanban */
        .kanban-column {
            min-height: 600px;
            background-color: #ebecf0;
            border-radius: 8px;
            padding: 15px;
        }
        
        /* Estilos de las tarjetas (tareas) */
        .kanban-card {
            background-color: white;
            border-radius: 4px;
            box-shadow: 0 1px 2px rgba(9,30,66,.25);
            cursor: grab;
            margin-bottom: 12px;
            transition: transform 0.2s;
        }
        .kanban-card:hover {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    
    <nav class="navbar navbar-dark mb-4 px-3 shadow-sm">
        <a class="navbar-brand fw-bold" href="#"><i class="fas fa-tasks me-2"></i>Team Flow</a>
    </nav>

    <div class="container-fluid px-5">
        <!-- Formulario Rápido -->
        <div class="row mb-5 justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm p-3">
                    <h6 class="text-muted mb-3">Agregar Nueva Historia de Usuario / Tarea</h6>
                    <form action="/add" method="POST" class="row g-2">
                        <div class="col-md-5">
                            <input type="text" name="title" class="form-control" placeholder="Título de la tarea..." required>
                        </div>
                        <div class="col-md-5">
                            <input type="text" name="description" class="form-control" placeholder="Descripción breve">
                        </div>
                        <div class="col-md-2 d-grid">
                            <button type="submit" class="btn btn-primary fw-bold">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tablero Kanban -->
        <div class="row g-4">
            <!-- Columna TODO -->
            <div class="col-md-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="text-uppercase text-secondary fw-bold small">Por Hacer</h5>
                    <span class="badge bg-secondary rounded-pill"><%= todos.length %></span>
                </div>
                <div class="kanban-column" id="todo">
                    <% todos.forEach(task => { %>
                        <div class="card kanban-card p-3 border-0">
                            <h6 class="fw-bold"><%= task.title %></h6>
                            <p class="small text-muted mb-2"><%= task.description %></p>
                            <div>
                                <span class="badge bg-light text-dark border"><%= task.priority %></span>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Columna IN PROGRESS -->
            <div class="col-md-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="text-uppercase text-primary fw-bold small">En Progreso</h5>
                    <span class="badge bg-primary rounded-pill"><%= inProgress.length %></span>
                </div>
                <div class="kanban-column border-top border-3 border-primary" id="progress">
                    <% inProgress.forEach(task => { %>
                        <div class="card kanban-card p-3 border-0">
                            <h6 class="fw-bold"><%= task.title %></h6>
                            <p class="small text-muted mb-0"><%= task.description %></p>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Columna DONE -->
            <div class="col-md-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="text-uppercase text-success fw-bold small">Completado</h5>
                    <span class="badge bg-success rounded-pill"><%= done.length %></span>
                </div>
                <div class="kanban-column border-top border-3 border-success" id="done">
                    <% done.forEach(task => { %>
                        <div class="card kanban-card p-3 border-0">
                            <h6 class="fw-bold text-decoration-line-through text-muted"><%= task.title %></h6>
                            <p class="small text-muted mb-0"><%= task.description %></p>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

</body>
</html>